@model MotoHelp.ViewModels.LoginModel

<h2 class="pt-5">Вход на сайт</h2>


<form class="mb-5" asp-action="Login" asp-controller="Personal" asp-anti-forgery="true" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="All"></div>
    <div>
        <div class="form-group mb-3">
            <label asp-for="Email">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-check form-switch mb-3">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe"></label><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
