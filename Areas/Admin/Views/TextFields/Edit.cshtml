@model TextField
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div class="pt-5">
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="TextFields" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="Name" />

            <div asp-validation-summary="All"></div>
            <div class="div-box mb-3">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box mb-3">
                <label asp-for="Text"></label>
                <textarea class="form-control" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="div-box mb-3">
                <label asp-for="MetaTitle"></label>
                <input class="form-control" asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="div-box mb-3">
                <label asp-for="MetaDescription"></label>
                <input class="form-control" asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>            
            <input class="btn btn-primary" type="submit" value="Сохранить" />
        </form>
    </div>
</div>
<script>
    $(document).ready(() => {
        $('.delete-picture').on('click', function (e) {
            let picid = $(this).attr('picid');
            let detid = $('input[name="Id"]').val();
            $.ajax({
                url: '/admin/details/removepic',
                method: 'POST',
                data: { picId: picid, detId: detid },
                success: () => {
                    $(this).parents().eq(3).find('input').removeClass('d-none');
                    $(this).parents().eq(1).remove();
                    },
                error: (response) => {
                    console.log(response)
                },
            });
        })
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEdit.updateElement();
    })
</script>